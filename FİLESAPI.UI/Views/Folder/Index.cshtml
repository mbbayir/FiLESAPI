@{
    ViewData["Title"] = "Folders";
    Layout = "~/Views/Shared/_Admin.cshtml";

}

<h2>Folders</h2>

<table id="foldersTable" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Folder Name</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<form id="folderForm">
    <input type="hidden" id="folderId" />
    <div class="form-group">
        <label for="folderName">Folder Name</label>
        <input type="file" id="folderName" class="form-control" required />
    </div>
    <button type="submit" id="ekle" class="btn btn-success">Add</button>
    <button type="submit" id="guncelle" class="btn btn-primary" style="display:none;">Update</button>
</form>
<div id="divResult"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/file.js"></script>
